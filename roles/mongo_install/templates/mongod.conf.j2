# MongoDB Configuration
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

storage:
  dbPath: /var/lib/mongo
  journal:
    enabled: true

net:
  port: {{ app_port }}
  bindIp: 0.0.0.0
{% if ansible_distribution == 'Red' %}
  unixDomainSocket:
    enabled: true
{% endif %}

security:
  authorization: enabled
{% if ansible_distribution in ['ALT', 'AstraLinux'] %}
  keyFile: /etc/mongodb.key
{% endif %}