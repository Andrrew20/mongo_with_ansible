MongoDB Configuration
systemLog:
    destination: file
    logAppend: true
    path: /var/log/mongodb/mongod.log

storage:
    dbPath: /var/lib/mongodb
    journal:
    enabled: true

net:
    port: {{ app_port }}
    bindip: 0.0.0.0

processManagement:
    fork: false
    pidFilePath: /var/run/mongodb/mongod.pid